@model IEnumerable<ToDoItem>

@{
    ViewData["Title"] = "To-Do List";
}

<h2>To-Do List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>
                    <form asp-controller="ToDo" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                    <a asp-controller="ToDo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button to navigate to the Create page -->
<a asp-controller="ToDo" asp-action="Create" class="btn btn-success">Create New Task</a>